<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@color/mainColor"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    >


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imvFirst"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/CornerCut"
        app:layout_constraintTop_toTopOf="parent"
        android:rotation="15"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageSecond"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/CornerCut"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/CornerCut"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:src="@color/black_transparent"
        />

    <TextView
        android:id="@+id/collectionDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/imageSecond"
        app:layout_constraintEnd_toEndOf="@id/imageSecond"
        app:layout_constraintStart_toStartOf="@id/imageSecond"
        app:layout_constraintBottom_toBottomOf="@id/imageSecond"
        android:text="Data"
        android:textSize="18sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:gravity="center"


        />
    <TextView
        android:id="@+id/collectionCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="124"
        app:layout_constraintTop_toBottomOf="@id/collectionDate"
        app:layout_constraintStart_toStartOf="@id/collectionDate"
        app:layout_constraintEnd_toEndOf="@id/collectionDate"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>